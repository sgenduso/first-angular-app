extends layout

block content
  div.nav
    |Reddit Clone
    ng-md-icon(icon='add')
    |Submit Post
    input(type='text' id='search' name='search' placeholder='Search')
    |Sort By {{sort}}
    select(ng-model='sort' ng-init="sort='votes'")
      option(value='Votes') Votes
      option(value='Date') Date
    div(ng-controller='Posts')
      div(ng-repeat='post in posts')
        div
          img(ng-src='{{post.imgUrl}}' width='200' alt='{{post.imgUrl}}')
        p by 
          ='{{post.title}}'
        p='{{post.author}}'
        p='{{post.description}}'
